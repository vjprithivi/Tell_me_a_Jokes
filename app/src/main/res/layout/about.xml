<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >


        <android.support.v7.widget.CardView
            android:id="@+id/joke"
            app:cardCornerRadius="40dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="73dp"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="oval"
            android:thicknessRatio="1.9">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/view2"
                android:layout_alignStart="@+id/view2"
                android:layout_below="@+id/view2"

                android:src="@drawable/ic_launcher" />
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="Tell me a Jokes \n Version 1.0 September 2017 " />

        <android.support.v7.widget.CardView
            android:id="@+id/view2"
            app:cardCornerRadius="40dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="73dp"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="oval"
            android:thicknessRatio="1.9">

            <ImageView
                android:id="@+id/Prof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/view2"
                android:layout_alignStart="@+id/view2"
                android:layout_below="@+id/view2"

                android:src="@drawable/prithivi" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="App Developed by\n G.PrithiviRaj" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/linkedin"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/linkedin" />

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/face" />

            <ImageView
                android:id="@+id/instagram"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_instagram_icon" />

            <ImageView
                android:id="@+id/website"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_website" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
